<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sheet1>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Title</sheetTitle>
                    <sheetDescription>Descr.</sheetDescription>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.type>
						<TCEforms>
							<label>Anzahl Spalten</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">2</numIndex>
										<numIndex index="1">two</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">3</numIndex>
										<numIndex index="1">three</numIndex>
									</numIndex>
                                    <numIndex index="2" type="array">
										<numIndex index="0">2 ohne Umbruch mobil</numIndex>
										<numIndex index="1">twoo</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.type>
                    <settings.color>
						<TCEforms>
							<label>Darstellungsart (Hintergrund - Spalten)</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">gelb - gelb</numIndex>
										<numIndex index="1">normal</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">weiß - weiß</numIndex>
										<numIndex index="1">white</numIndex>
									</numIndex>
                                    <numIndex index="2" type="array">
										<numIndex index="0">weiß - gelb</numIndex>
										<numIndex index="1">grey</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.color>
                    <settings.distance>
						<TCEforms>
							<label>Abstand nach Unten</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">normaler Abstand</numIndex>
										<numIndex index="1">distance</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">kein Abstand (Vergleich)</numIndex>
										<numIndex index="1">nodistance</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.distance>    
                    <settings.headline>
                        <TCEforms>
                            <label>Überschrift</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                                <size>30</size>
                            </config>
                        </TCEforms>
                    </settings.headline>
                    <settings.text>
                        <TCEforms>
                            <label>Unterüberschrift</label>
                            <config>
                                <type>text</type>
                                <cols>30</cols>
                                <rows>4</rows>
                            </config>
                        </TCEforms>
                    </settings.text>
                    <settings.headline1>
                        <TCEforms>
                            <label>Überschrift 1. Spalte</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                                <size>30</size>
                            </config>
                        </TCEforms>
                    </settings.headline1>
                    <settings.img1>
						<TCEforms>
							<label>Icon / Bild 1. Spalte</label>
							<config>										
								<type>group</type>
								<internal_type>file</internal_type>
								<allowed>gif, jpg,jpeg,png,csv</allowed>
								<max_size>10000</max_size>
								<uploadfolder>uploads/tx_fsfzollercolumns</uploadfolder>
								<maxitems>1</maxitems>
								<size>1</size>
								<selectedliststyle>Width:180px</selectedliststyle>
							</config>
						</TCEforms>
					</settings.img1>
                    <settings.text1>
                        <TCEforms>
                            <label>Text 1. Spalte</label>
                            <config>
                                <type>text</type>
                                <cols>30</cols>
                                <rows>4</rows>
                            </config>
                        </TCEforms>
                    </settings.text1>
                    <settings.buttontext1>
                        <TCEforms>
                            <label>Buttontext 1. Spalte</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                                <size>30</size>
                            </config>
                        </TCEforms>
                    </settings.buttontext1>
                    <settings.url1>
                        <TCEforms>
                            <label>Buttonlink 1. Spalte</label>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <max>256</max>
                                <eval>trim</eval>
                                <renderType>inputLink</renderType>
                                <softref>typolink</softref>
                            </config>
                        </TCEforms>
                    </settings.url1>
                    <settings.headline2>
                        <TCEforms>
                            <label>Überschrift 2. Spalte</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                                <size>30</size>
                            </config>
                        </TCEforms>
                    </settings.headline2>
                    <settings.img2>
						<TCEforms>
							<label>Icon / Bild 2. Spalte</label>
							<config>										
								<type>group</type>
								<internal_type>file</internal_type>
								<allowed>gif, jpg,jpeg,png,csv</allowed>
								<max_size>10000</max_size>
								<uploadfolder>uploads/tx_fsfzollercolumns</uploadfolder>
								<maxitems>1</maxitems>
								<size>1</size>
								<selectedliststyle>Width:180px</selectedliststyle>
							</config>
						</TCEforms>
					</settings.img2>
                    <settings.text2>
                        <TCEforms>
                            <label>Text 2. Spalte</label>
                            <config>
                                <type>text</type>
                                <cols>30</cols>
                                <rows>4</rows>
                            </config>
                        </TCEforms>
                    </settings.text2>
                    <settings.buttontext2>
                        <TCEforms>
                            <label>Buttontext 2. Spalte</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                                <size>30</size>
                            </config>
                        </TCEforms>
                    </settings.buttontext2>
                    <settings.url2>
                        <TCEforms>
                            <label>Buttonlink 2. Spalte</label>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <max>256</max>
                                <eval>trim</eval>
                                <renderType>inputLink</renderType>
                                <softref>typolink</softref>
                            </config>
                        </TCEforms>
                    </settings.url2>
                    <settings.headline3>
                        <TCEforms>
                            <label>Überschrift 3. Spalte</label>
                            <displayCond>FIELD:settings.type:=:three</displayCond>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                                <size>30</size>
                            </config>
                        </TCEforms>
                    </settings.headline3>
                    <settings.img3>
						<TCEforms>
							<label>Icon / Bild 3. Spalte</label>
                            <displayCond>FIELD:settings.type:=:three</displayCond>
							<config>										
								<type>group</type>
								<internal_type>file</internal_type>
								<allowed>gif, jpg,jpeg,png,csv</allowed>
								<max_size>10000</max_size>
								<uploadfolder>uploads/tx_fsfzollercolumns</uploadfolder>
								<maxitems>1</maxitems>
								<size>1</size>
								<selectedliststyle>Width:180px</selectedliststyle>
							</config>
						</TCEforms>
					</settings.img3>
                    <settings.text3>
                        <TCEforms>
                            <label>Text 3. Spalte</label>
                            <displayCond>FIELD:settings.type:=:three</displayCond>
                            <config>
                                <type>text</type>
                                <cols>30</cols>
                                <rows>4</rows>
                            </config>
                        </TCEforms>
                    </settings.text3>
                    <settings.buttontext3>
                        <TCEforms>
                            <label>Buttontext 3. Spalte</label>
                            <displayCond>FIELD:settings.type:=:three</displayCond>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                                <size>30</size>
                            </config>
                        </TCEforms>
                    </settings.buttontext3>
                    <settings.url3>
                        <TCEforms>
                            <label>Buttonlink 3. Spalte</label>
                            <displayCond>FIELD:settings.type:=:three</displayCond>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <max>256</max>
                                <eval>trim</eval>
                                <renderType>inputLink</renderType>
                                <softref>typolink</softref>
                            </config>
                        </TCEforms>
                    </settings.url3>
                </el>
            </ROOT>
        </sheet1>
    </sheets>
</T3DataStructure>
